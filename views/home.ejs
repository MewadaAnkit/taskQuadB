            display: flex;
            flex-direction: column;
            height: 100%;
        }

        main {
            flex: 1 0 auto;
        }

        .navbar {

            color: #fff;
            display: flex;
            justify-content: space-between;
            padding: 10px;
        }

        .navbar-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .navbar-logo {
            font-size: 5rem;
            font-weight: bold;
            text-decoration: none;
            color: #68dbeb;
        }

        .navbar-menu {
            display: flex;
            align-items: center;
        }



        .navbar-button {
            margin-right: 10px;
            padding: 10px;
            background-color: #2e3241;
