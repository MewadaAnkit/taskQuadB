        </div>
        <div>
            <p class="valueB">Average BTC/INR net price including commission</p>
        </div>
        <div>
            <table class="table table-sm ">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Platform</th>
                        <th scope="col">Last Traded Price</th>
                        <th scope="col">Buy / Sell Price</th>
                        <th scope="col">Volume</th>
                        <th scope="col">base_unit</th>
                    </tr>
                </thead>
                <tbody>

                    
                    <% for(let i = 0; i < 10; i++) { %>
                        <tr>
                            <th scope="row"><span><%= i+1 %></span></th>
                            <td><%= ticks[i].name %></td>
                            <td><%= ticks[i].last %></td>
                            <td><%= ticks[i].buy %> / <%= ticks[i].sell%></td>
                            <td><%= ticks[i].volume %></td>
                            <td><%= ticks[i].base_unit %></td>
                        </tr>
                        <% } %>










