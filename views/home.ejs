        }

        .middlet {
            color: #a8a7a7;
            font-size: 1.1rem;
            font-weight: 100;
            margin-bottom: 10px;
            text-align: center;
        }

        .values {
            display: flex;
            padding: 10px;
            justify-content: space-around;
            color: #85e6e6;

        }

        .values p {
            margin-top: 30px;
            font-size: 3rem;
        }

        .values .maintext {
            color: white;
            font-size: 35px;
            font-size: 7rem;
            font-weight: bolder;

        }

        .valueB {
            color: #a8a7a7;
            font-weight: 100;
            text-align: center;
        }
        table{
            margin-top: 55px;
        }
          
        table thead tr th {
            color: #9fa2a5;
            font-size: 2.5rem;
            font-weight: bolder;
        }
        table tbody tr th span {
               color: white;

        }
        table tbody tr td {
            color: #fff;
            font-size: 2rem;
            font-weight: bold;
            padding-bottom: 10px;
        }

        footer {
            margin-top: 10px;
            flex-shrink: 0;
        }

        footer p {
            color: white;
            position: static;
            padding: 10px;
            font-size: 1.4rem;

            
    
        }
        footer p span{
             padding-left: 10px;
        }
